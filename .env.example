
# Firebase Configuration (Client-side, hence NEXT_PUBLIC_ prefix)
# Copy these from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id_here (optional, if you use Firebase Analytics)

# Stripe API Keys
# STRIPE_SECRET_KEY is used server-side (e.g., in API routes)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY is used client-side
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Stripe Price ID for your "Pro" plan
# This ID comes from the Price you create in your Stripe Dashboard for your subscription product
STRIPE_PRO_PRICE_ID=your_pro_plan_price_id_here
